{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "clipboard-to-cloud",
  "title": "Clipboard to Cloud (C2C)",
  "description": "Upload clipboard files to cloud storage and manage local upload history.",
  "icon": "extension-icon.png",
  "author": "nafiul09",
  "platforms": [
    "macOS",
    "Windows"
  ],
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "cloudProvider",
      "type": "dropdown",
      "required": false,
      "title": "Cloud Provider",
      "description": "Cloud provider used for uploads",
      "default": "cloudflare-r2",
      "data": [
        {
          "title": "Cloudflare R2",
          "value": "cloudflare-r2"
        }
      ]
    },
    {
      "name": "r2Endpoint",
      "type": "textfield",
      "required": false,
      "title": "R2 Endpoint",
      "description": "S3-compatible endpoint (e.g. https://<accountid>.r2.cloudflarestorage.com)",
      "placeholder": "https://<accountid>.r2.cloudflarestorage.com"
    },
    {
      "name": "r2Bucket",
      "type": "textfield",
      "required": false,
      "title": "R2 Bucket",
      "description": "Cloudflare R2 bucket name"
    },
    {
      "name": "r2AccessKeyId",
      "type": "textfield",
      "required": false,
      "title": "R2 Access Key ID",
      "description": "Access key ID for your R2 API token credentials"
    },
    {
      "name": "r2SecretAccessKey",
      "type": "password",
      "required": false,
      "title": "R2 Secret Access Key",
      "description": "Secret access key for your R2 API token credentials"
    },
    {
      "name": "publicBaseUrl",
      "type": "textfield",
      "required": false,
      "title": "Public Base URL",
      "description": "Public domain used to access uploaded files",
      "placeholder": "https://img.yourdomain.com"
    },
    {
      "name": "allowImages",
      "type": "checkbox",
      "required": false,
      "title": "Allowed File Types",
      "label": "Images",
      "description": "Allow image file uploads",
      "default": true
    },
    {
      "name": "allowVideos",
      "type": "checkbox",
      "required": false,
      "title": "",
      "label": "Videos",
      "description": "Allow video file uploads",
      "default": true
    },
    {
      "name": "allowDocuments",
      "type": "checkbox",
      "required": false,
      "title": "",
      "label": "Documents",
      "description": "Allow document file uploads",
      "default": true
    },
    {
      "name": "allowArchives",
      "type": "checkbox",
      "required": false,
      "title": "",
      "label": "Archives",
      "description": "Allow archive file uploads",
      "default": true
    },
    {
      "name": "allowAudios",
      "type": "checkbox",
      "required": false,
      "title": "",
      "label": "Audios",
      "description": "Allow audio file uploads",
      "default": true
    },
    {
      "name": "allowOthers",
      "type": "checkbox",
      "required": false,
      "title": "",
      "label": "Others",
      "description": "Allow file uploads outside known categories",
      "default": true
    },
    {
      "name": "maxUploadSizeMb",
      "type": "textfield",
      "required": false,
      "title": "Max Upload Size (MB)",
      "description": "Maximum file size accepted for upload",
      "default": "25",
      "placeholder": "25"
    },
    {
      "name": "historyLimit",
      "type": "dropdown",
      "required": false,
      "title": "Library History Limit",
      "description": "Number of local upload history records to keep",
      "default": "200",
      "data": [
        {
          "title": "50",
          "value": "50"
        },
        {
          "title": "100",
          "value": "100"
        },
        {
          "title": "200",
          "value": "200"
        },
        {
          "title": "500",
          "value": "500"
        },
        {
          "title": "Unlimited",
          "value": "unlimited"
        }
      ]
    }
  ],
  "commands": [
    {
      "name": "upload-clipboard-file",
      "title": "Upload Clipboard File to Cloud",
      "description": "Upload current clipboard file to cloud and copy URL",
      "mode": "no-view"
    },
    {
      "name": "c2c-file-library",
      "title": "C2C File Library",
      "description": "Browse uploaded file URLs",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@aws-sdk/client-s3": "^3.886.0",
    "@raycast/api": "^1.104.6",
    "@raycast/utils": "^1.17.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
